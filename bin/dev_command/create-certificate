
# Config
CERTS_DIR=${DEV_WORKDIR}/conf/nginx/conf/certs;
CERT_PASSWORD="MyPassword";
CERT_COUNTRY="NL";
CERT_PROVICE="Noord-Holland";
CERT_LOCALITY="Amsterdam";
CERT_ORGANIZATION="DevPot";

cd ${CERTS_DIR};
echo "[req]
default_bits       = 2048
default_keyfile    = ${DEV_COMMAND_OPTIONS}.key
distinguished_name = req_distinguished_name
req_extensions     = req_ext
x509_extensions    = v3_ca

[req_distinguished_name]
countryName                 = Country Name (2 letter code)
countryName_default         = ${CERT_COUNTRY}
stateOrProvinceName         = State or Province Name (full name)
stateOrProvinceName_default = ${CERT_PROVICE}
localityName                = Locality Name (eg, city)
localityName_default        = ${CERT_LOCALITY}
organizationName            = Organization Name (eg, company)
organizationName_default    = ${CERT_ORGANIZATION}
commonName                  = Common Name (e.g. server FQDN or YOUR name)
commonName_default          = *.${DEV_COMMAND_OPTIONS}.dev
commonName_max              = 64

[req_ext]
subjectAltName = @alt_names

[v3_ca]
subjectAltName = @alt_names

[alt_names]
DNS.1   = *.${DEV_COMMAND_OPTIONS}.dev
DNS.2   = ${DEV_COMMAND_OPTIONS}.dev" > ${DEV_COMMAND_OPTIONS}.conf

sudo openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout ${DEV_COMMAND_OPTIONS}.key -out ${DEV_COMMAND_OPTIONS}.crt -config ${DEV_COMMAND_OPTIONS}.conf -subj "/C=${CERT_COUNTRY}/ST=${CERT_PROVICE}/L=${CERT_LOCALITY}/O=${CERT_ORGANIZATION}/CN=*.${DEV_COMMAND_OPTIONS}.dev" -passin pass:${CERT_PASSWORD}
sudo openssl pkcs12 -export -out ${DEV_COMMAND_OPTIONS}.pfx -inkey ${DEV_COMMAND_OPTIONS}.key -in ${DEV_COMMAND_OPTIONS}.crt -passout pass:${CERT_PASSWORD}

if sudo apt-get -qq install libnss3-tools; then
    echo "Info: Successfully installed libnss3-tools"
else
    echo "Error: Can't install libnss3-tools"
fi

certutil -d sql:$HOME/.pki/nssdb -A -t "P,," -n "${DEV_COMMAND_OPTIONS}.dev" -i ${DEV_COMMAND_OPTIONS}.crt

echo "Created certificate for: *.${DEV_COMMAND_OPTIONS}.dev";

exit $?;