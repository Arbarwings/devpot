
DEV_USER=www-data;
DEV_SERVICE=php7console;

DEV_CMD='';
if [ -n "${DEV_DATADIR}" ]; then
    DEV_CMD="cd ${DEV_DATADIR} && ";
fi

if [ -z "${DEV_COMMAND_OPTIONS}" ]; then
    # Interactive mode
    DEV_CMD="${DEV_CMD}${DEV_SHELL} -il"
fi

DEV_CMD='"${DEV_SHELL}" -c "'"${DEV_CMD} ${DEV_COMMAND_OPTIONS}"'"';
